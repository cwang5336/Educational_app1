<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#37B6F6">

    <TextView
        android:id="@+id/main_menu_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:scaleX="5"
        android:scaleY="5"
        android:textColorHint="@color/white"
        android:textColor="@drawable/gradient2"
        android:text="Math" />

    <TextView
        android:id="@+id/main_menu_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:scaleX="5"
        android:scaleY="5"
        android:layout_below="@id/main_menu_text1"
        android:text="Village" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App by Cheng , Wilson, Christine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:scaleX="1"
        android:scaleY="1"
        />


    <Button
        android:id="@+id/enterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:backgroundTint="#FFA607"
        android:text="START" />


</RelativeLayout>